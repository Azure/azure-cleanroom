# Use the official .NET Core SDK as the base image
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build

# Set the working directory
WORKDIR /app

# copy csproj and restore as distinct layers
# https://blog.nimbleways.com/docker-build-caching-for-dotnet-applications-done-right-with-dotnet-subset/
COPY Directory.Packages.props /app
COPY Directory.Build.props /app
COPY src/workloads/*.sln /app/src/workloads/
COPY src/workloads/cleanroom-spark-analytics-agent/*.csproj /app/src/workloads/cleanroom-spark-analytics-agent/
COPY src/secrets/common/*.csproj /app/src/secrets/common/
COPY src/internal/Attestation/*.csproj /app/src/internal/Attestation/
COPY src/internal/restapi-common/*.csproj /app/src/internal/restapi-common/
COPY src/secrets/common/*.csproj /app/src/secrets/common/
RUN dotnet restore /app/src/workloads/workloads.sln

# copy everything else and build app
COPY stylecop.json /app
COPY Menees.Analyzers.Settings.xml /app
COPY .editorconfig /app
COPY src/internal /app/src/internal
COPY src/secrets/common /app/src/secrets/common/
COPY src/workloads /app/src/workloads

# Publish the application
RUN dotnet publish -c Release --no-restore -o /app/publish /app/src/workloads/cleanroom-spark-analytics-agent/cleanroom-spark-analytics-agent.csproj

# Use the official .NET Core runtime as the base image for the final stage
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime

RUN apt-get update && apt-get install -y curl

# Set the working directory
WORKDIR /app

# Copy the published output from the build stage to the runtime stage
COPY --from=build /app/publish .

# Set the entry point for the container
ENTRYPOINT ["dotnet", "cleanroom-spark-analytics-agent.dll"]