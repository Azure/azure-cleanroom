@model EventsViewModel
@{
    ViewData["Title"] = "Audit Events";
}

<h2>Audit Events</h2>
<table class="table table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Timestamp</th>
            <th>Event</th>
        </tr>
    </thead>
    <tbody>
        @{if (@Model.Value != null && @Model.Value.Any())
    {
        int count = 0;
        @foreach (Event item in @Model.Value)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Timestamp_Iso</td>
                <td><pre>@item.Data</pre></td>
            </tr>
        }
    } else
    {
            <tr>
                <td></td>
                <td></td>
                <td><i>No events yet</i></td>
            </tr>

    }
    }
    </tbody>
</table>
