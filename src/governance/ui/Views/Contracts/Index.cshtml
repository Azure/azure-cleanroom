@model List<ContractViewModel>
@{
    ViewData["Title"] = "Contracts";
}

<h2>Contracts</h2>
<p>
    <a asp-action="Create">Create</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contract in @Model)
        {
            <tr>
                <td>@contract.Id</td>
                <td>
                    <!-- <snippet_AspController> -->
                    <a asp-controller="Contracts"
                       asp-action="Detail" asp-route-id="@contract.Id">Details</a>
                    <!-- </snippet_AspController> -->
                </td>
            </tr>
        }
    </tbody>
</table>