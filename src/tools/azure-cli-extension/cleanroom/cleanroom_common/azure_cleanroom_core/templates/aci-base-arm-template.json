{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "name": {
      "type": "string",
      "defaultValue": "[deployment().name]",
      "metadata": {
        "description": "Name of the container group."
      }
    },
    "dnsNameLabel": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "The Dns name label for the IP."
      }
    }
  },
  "variables": {
    "ccrFqdn": "[if(equals(parameters('dnsNameLabel'), ''), '', concat(parameters('dnsNameLabel'), '.', parameters('location'), '.', 'azurecontainer.io'))]"
  },
  "resources": [
    {
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2023-05-01",
      "name": "[parameters('name')]",
      "location": "[parameters('location')]",
      "tags": {
        "accr-contract-id": "",
        "accr-version": ""
      },
      "properties": {
        "initContainers": [],
        "containers": [],
        "imageRegistryCredentials": [],
        "confidentialComputeProperties": {
          "ccePolicy": ""
        },
        "ipAddress": {
          "autoGeneratedDomainNameLabelScope": "[if(equals(parameters('dnsNameLabel'), ''), '', 'Unsecure')]",
          "dnsNameLabel": "[parameters('dnsNameLabel')]"
        },
        "osType": "Linux",
        "restartPolicy": "Never",
        "sku": "confidential",
        "volumes": [
          {
            "name": "remotemounts",
            "emptyDir": {}
          },
          {
            "name": "uds",
            "emptyDir": {}
          },
          {
            "name": "telemetrymounts",
            "emptyDir": {}
          },
          {
            "name": "volumestatusmounts",
            "emptyDir": {}
          }
        ]
      }
    }
  ]
}